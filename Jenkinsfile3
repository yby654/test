#!/usr/bin/env groovy
import hudson.model.*

node {
      stage('Maven') {
          sh 'mvn clean install'
      }
      stage('Docker Build image') {
          withDockerRegistry('', 'docker-id-label') {
              sh 'docker build -t yby654/demo:latest ./Dockerfile .'
          }
      }
      stage('Docker Push image') {
          docker.withRegistry('', 'docker-id-label') {
            docker.image('yby654/demo:latest').push()
          }
      }
}